{
  "name": "traycer-clone",
  "displayName": "Traycer Clone",
  "description": "AI-powered task planning and orchestration assistant.",
  "version": "0.0.1",
  "publisher": "traycer-clone",
  "repository": {
    "type": "git",
    "url": "https://github.com/traycer-clone/traycer-clone"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Traycer Clone",
      "properties": {
        "traycer.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for Traycer Clone"
        },
        "traycer.apiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "API Base URL (e.g. for Groq or local LLMs)"
        },
        "traycer.model": {
          "type": "string",
          "default": "gpt-4o",
          "description": "Model to use for planning and review"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "traycer-explorer",
          "title": "Traycer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "traycer-explorer": [
        {
          "id": "traycer.chatView",
          "type": "webview",
          "name": "Chat & Plan"
        }
      ]
    },
    "commands": [
      {
        "command": "traycer.startPlan",
        "title": "Traycer: Start New Plan"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "bundle": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "openai": "^6.15.0"
  }
}
